// Chapter 2 Practise Set Questions
// Problem No-1

let age = prompt("What is your age?")
age = Number.parseInt(age)
if(age>=10 && age<=20) {
  console.log("Your age lies between 10 and 20")
}
else {
  console.log("Your age does not lies between that criteria")
}

// Problem No-2
let age = prompt("What is your age?")
switch(age) {
  case '12' :
    console.log("Your age is 12")
    break
  case '13' :
    console.log("Your age is 13")
    break
  case '14' :
    console.log("Your age is 14")
    break
  case '15' :
    console.log("Your age is 15")
    break
  default:
    cosole.log("Your age is not special")
}

// Problem No-3

let num = prompt("Enter Your Number: ")
num = Number.parseInt(num)

if(num%2 == 0 && num%3 == 0) {
  console.log("This Number is Divisible")
}
else{
  console.log("This Number is Not Divisible")
}

// Problem No-4
let num = prompt("Enter Your Number: ")
num = Number.parseInt(num)

if(num%2 == 0) {
  console.log("It is divisible by 2")
} 
else{
  console.log("It is not divisible by 2")
}
if(num%3 == 0) {
  console.log("It is divisible by 3")
}
else{
  console.log("It is not divisible by 3")
}

// Problem No-5
